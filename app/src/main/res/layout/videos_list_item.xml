<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="164dp"
    android:layout_height="162dp"
    android:paddingStart="0dp"
    android:paddingEnd="8dp"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/thumbnail_rl"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:foreground="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/video_thumbnail_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:contentDescription="@string/video_thumbnail"
            tools:src="@drawable/sample_video_thumbnail" />

        <ImageView
            android:id="@+id/video_play_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/darkVideoOverlay"
            android:scaleType="center"
            android:scaleX="2.5"
            android:scaleY="2.5"
            android:src="@drawable/ic_play_circle_filled_black_24dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/thumbnail_tv"
        style="@style/trailerLabelStyle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        tools:text="Trailer 1 Official Trailer" />

</LinearLayout>
